{
	"name": "@florian21/react-modal",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"files": [
		"dist"
	],
	"main": "./dist/react-modal.umd.js",
	"module": "./dist/react-modal.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/react-modal.es.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/react-modal.umd.js"
			}
		},
		"./dist/style.css": "./dist/style.css"
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	},
	"devDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"@types/node": "^20.8.10",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react": "^4.0.3",
		"autoprefixer": "^10.4.16",
		"clsx": "^2.0.0",
		"eslint": "^8.45.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"tailwind-merge": "^2.0.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vite-plugin-dts": "^3.6.3",
		"vite-tsconfig-paths": "^4.2.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Florian-2/react-modal"
	},
	"keywords": [
		"react",
		"react-components",
		"ui",
		"modal",
		"dialog"
	],
	"author": "Florian",
	"homepage": "https://github.com/Florian-2/react-modal#readme",
	"license": "MIT"
}
